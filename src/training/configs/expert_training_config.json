{
  "model": {
    "base_model": "models/unsloth-gemma-3-270m-it",
    "max_seq_length": 2048,
    "torch_dtype": "float16",
    "device_map": "auto",
    "attn_implementation": "eager"
  },
  "training": {
    "output_dir_base": "checkpoints/expert_training",
    "logging_steps": 50,
    "save_total_limit": 3,
    "load_best_model_at_end": true,
    "metric_for_best_model": "eval_loss",
    "greater_is_better": false,
    "fp16": true,
    "report_to": [],
    "gradient_checkpointing": true
  },
  "experts": {
    "uci": {
      "description": "UCI Engine Expert - Fast, accurate move generation",
      "focus": "move_accuracy",
      "data_filters": {
        "task": "engine_uci",
        "min_rating": 1200,
        "max_examples": 5000
      },
      "training": {
        "learning_rate": 2e-4,
        "batch_size": 8,
        "max_steps": 50
        "evaluation_frequency": 25
      },
      "target_metrics": {
        "move_accuracy": 0.75,
        "response_time": 0.5,
        "legal_move_rate": 0.95
      }
    },
    "tutor": {
      "description": "Chess Tutor Expert - Detailed analysis and teaching",
      "focus": "analysis_quality",
      "data_filters": {
        "task": "tutor_explain",
        "min_rating": 1300,
        "max_examples": 3000
      },
      "training": {
        "learning_rate": 1.5e-4,
        "batch_size": 4,
        "max_steps": 30
        "evaluation_frequency": 15
      },
      "target_metrics": {
        "explanation_quality": 0.8,
        "analysis_depth": 0.75,
        "teaching_effectiveness": 0.7
      }
    },
    "director": {
      "description": "Chess Director Expert - Strategic planning and knowledge",
      "focus": "strategic_understanding",
      "data_filters": {
        "task": "director_qa",
        "min_rating": 1400,
        "max_examples": 2000
      },
      "training": {
        "learning_rate": 1e-4,
        "batch_size": 2,
        "max_steps": 20
        "evaluation_frequency": 10
      },
      "target_metrics": {
        "strategic_accuracy": 0.8,
        "knowledge_depth": 0.75,
        "planning_quality": 0.7
      }
    }
  },
  "data_processing": {
    "shuffle_seed": 42,
    "validation_split": 0.1,
    "max_sequence_length": 2048,
    "remove_unused_columns": true
  },
  "evaluation": {
    "metrics": [
      "eval_loss",
      "eval_accuracy",
      "eval_f1",
      "eval_perplexity"
    ],
    "save_best_model": true,
    "early_stopping_patience": 5
  },
  "performance_targets": {
    "min_expert_performance": 0.7,
    "max_training_time_hours": 2.0,
    "target_convergence_steps": 2000
  }
}
